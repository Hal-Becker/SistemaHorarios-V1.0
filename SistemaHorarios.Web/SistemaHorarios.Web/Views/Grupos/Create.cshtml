@model SistemaHorarios.Web.Models.GrupoViewModel

<h2>Crear Grupo</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Nivel Educativo</label>
        <input asp-for="NivelEducativo" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">
        Guardar
    </button>
</form>