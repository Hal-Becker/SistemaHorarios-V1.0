@model List<SistemaHorarios.Web.Models.GrupoViewModel>

<h2 class="mb-3">Grupos</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    ➕ Nuevo Grupo
</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Nivel Educativo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grupo in Model)
        {
            <tr>
                <td>@grupo.IdGrupo</td>
                <td>@grupo.Nombre</td>
                <td>@grupo.NivelEducativo</td>
                <td>
                    <a asp-action="Delete"
                       asp-route-id="@grupo.IdGrupo"
                       class="btn btn-danger btn-sm">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>