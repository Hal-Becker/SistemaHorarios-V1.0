@model SistemaHorarios.Web.Models.AsignaturaViewModel

<h2>Crear Asignatura</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Horas Semanales</label>
        <input asp-for="HorasSemanales"
               type="number"
               class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">
        Guardar
    </button>
</form>